@using Microsoft.EntityFrameworkCore;
@model IConnect_Training_.Net_Core_project.Models.Appointment

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit The Appointment</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DoctorId" class="control-label">Doctor Name</label>
                <select asp-for="DoctorId" class="form-control">
                    @{
                        foreach (Doctor doctor in (DbSet<Doctor>)ViewData["DoctorsList"])
                        {
                            <option value="@doctor.Id">@doctor.FirstName @doctor.LastName</option>
                        }
                    }
                </select>
                <span asp-validation-for="DoctorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label">Patient Name</label>
                <select asp-for="PatientId" class="form-control">
                    @{
                        foreach (Patient patient in (DbSet<Patient>)ViewData["PatientsList"])
                        {
                            <option value="@patient.Id">@patient.FirstName @patient.LastName</option>
                        }
                    }
                </select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation" class="control-label"></label>
                <input asp-for="Reservation" class="form-control" />
                <span asp-validation-for="Reservation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppointmentId" class="control-label">Appointment Type</label>
                <select asp-for="AppointmentId" class="form-control" asp-items="ViewBag.AppointmentTypes"></select>
                <span asp-validation-for="AppointmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
